#!/bin/bash
# postinst script for bpm
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

        # ------------------------------------------------------------------------
        # Setup auto-completion for bpm
        # ------------------------------------------------------------------------

        # Attempt to obtain directory where "bash completion" scripts should be placed.
        auto_completion_dir=$(pkg-config --variable=completionsdir bash-completion 2> /dev/null || test $? = 1)

        # In case that no directory was returned, then we try to default to the legacy directory
        if [[ -z "$auto_completion_dir" && -d '/etc/bash_completion.d' ]]; then
            auto_completion_dir='/etc/bash_completion.d'
        fi

        # Define target "completion" script path and desired location of symlink
        target='/usr/lib/bpm/helpers/completions/bpm'
        symlink="${auto_completion_dir}/bpm"

        # Create symlink to the "bpm completion" script
        if [[ -f "$target" && -n "$auto_completion_dir" && ! -L "$symlink" ]]; then
            ln -s $target $symlink
        fi

        # Otherwise, we skip setting up auto-completion...
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
